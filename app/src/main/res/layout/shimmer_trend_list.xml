<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_TrendShimmer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    tools:ignore="ExtraText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <View
            android:id="@+id/item_image_trendshim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="10:16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ExtraText" />

        <View
            android:id="@+id/img_icon1_trendshim"
            android:layout_width="24dp"
            android:layout_height="14dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="17dp"
            android:background="@color/grey"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/item_image_trendshim"
            app:layout_constraintTop_toBottomOf="@+id/item_title_trendshim"
            tools:ignore="ExtraText" />


        <View
            android:id="@+id/img_icon3_trendshim"
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:background="@color/grey"
            app:layout_constraintStart_toEndOf="@+id/item_image_trendshim"
            app:layout_constraintTop_toBottomOf="@+id/img_icon1_trendshim"
            tools:ignore="ExtraText" />


        <View
            android:id="@+id/item_title_trendshim"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:background="@color/grey"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_bookmark_trendshim"
            app:layout_constraintStart_toEndOf="@+id/item_image_trendshim"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ExtraText" />

        <View
            android:id="@+id/item_imdb_trendshim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="12dp"
            android:background="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/img_icon1_trendshim"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_icon1_trendshim"
            app:layout_constraintTop_toTopOf="@+id/img_icon1_trendshim"
            tools:ignore="ExtraText" />

        <View
            android:id="@+id/item_genre_trendshim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="12dp"
            android:background="@color/grey"
            app:layout_constraintBottom_toBottomOf="@+id/img_icon3_trendshim"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_icon3_trendshim"
            app:layout_constraintTop_toTopOf="@+id/img_icon3_trendshim" />

        <View
            android:id="@+id/item_Desc_trendshim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:background="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_image_trendshim"
            app:layout_constraintTop_toBottomOf="@+id/item_genre_trendshim" />

        <View
            android:id="@+id/imageButton_bookmark_trendshim"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="15dp"
            android:background="@color/grey"
            app:layout_constraintBottom_toTopOf="@+id/item_imdb_trendshim"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>