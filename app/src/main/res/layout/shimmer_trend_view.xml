<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_trend_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:ignore="NamespaceTypo"
    shimmer:shimmer_duration="800">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/trend_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:ignore="MissingConstraints"
            shimmer:layout_constraintEnd_toEndOf="parent"
            shimmer:layout_constraintStart_toStartOf="parent"
            shimmer:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                app:ignore="MissingConstraints"
                shimmer:layout_constraintEnd_toEndOf="parent"
                shimmer:layout_constraintStart_toStartOf="parent"
                shimmer:layout_constraintTop_toBottomOf="@+id/recommend_layout">

                <include layout="@layout/shimmer_trend_list" />

                <include layout="@layout/shimmer_trend_list" />

            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>